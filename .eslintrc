{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "arrowFunctions": true
  },
  "globals": {
    "Auth0Lock": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "camelcase": [2, {
      "properties": "always"
    }],
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "comma-dangle": [2, "never"],
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "no-extra-semi": 2,
    "no-multiple-empty-lines": 2,
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "after-used"
    }],
    "prefer-const": 1,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "jsx-quotes": 1,

    // eslint-plugin-react specific
    "react/jsx-boolean-value": 0,
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": [1, {
      "ignoreStateless": true
    }],
    "react/no-unknown-property": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "react/wrap-multilines": 1
  }
}